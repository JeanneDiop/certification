{
    "openapi": "3.0.0",
    "paths": {
        "/api/achats": {
            "get": {
                "tags": [
                    "Achats"
                ],
                "summary": "Obtenir la liste de tous les achats",
                "description": "Retourne la liste de tous les achats",
                "operationId": "getAchats",
                "responses": {
                    "200": {
                        "description": "Opération réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status_code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status_message": {
                                            "type": "string",
                                            "example": "tous les achats ont été récupérés"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Achat"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/achats/{id}": {
            "get": {
                "tags": [
                    "Achats"
                ],
                "summary": "Obtenir les détails d'un achat",
                "description": "Retourne les détails d'un achat en fonction de l'ID spécifié",
                "operationId": "getAchatById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de l'achat",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Opération réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status_code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status_message": {
                                            "type": "string",
                                            "example": "Détails de l'achat récupérés avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Achat"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Achat non trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Désolé, pas d'achat trouvé."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/achats/{achat}": {
            "patch": {
                "tags": [
                    "Achats"
                ],
                "summary": "Modifier un achat existant",
                "description": "Modifie un achat existant dans la base de données",
                "operationId": "editAchat",
                "parameters": [
                    {
                        "name": "achat",
                        "in": "path",
                        "description": "ID de l'achat à modifier",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/EditAchatRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Opération réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status_code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status_message": {
                                            "type": "string",
                                            "example": "Achat modifié avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Achat"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Internal Server Error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}